/* Clean modern input bar */
.entrybar {
  position: fixed;
  left: 50%;
  bottom: 24px;
  transform: translateX(-50%);
  width: min(700px, 90vw);
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 6px;
  background: rgba(11, 15, 20, 0.8);
  border: 1px solid rgba(105, 234, 203, 0.2);
  border-radius: 25px;
  backdrop-filter: blur(20px);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  z-index: 3;
  transition: all 0.5s ease; /* Slowed down from 0.2s to 0.5s for gentler entrybar transitions */
}

.entrybar:focus-within {
  border-color: rgba(105, 234, 203, 0.4);
  box-shadow: 0 4px 30px rgba(105, 234, 203, 0.15);
}

.entrybar input {
  flex: 1;
  background: transparent;
  border: none;
  padding: 16px 20px;
  color: var(--fg);
  font-size: 15px;
  outline: none;
}

.entrybar input::placeholder {
  color: var(--muted);
  opacity: 0.7;
}

.entrybar .icon-btn {
  height: 38px;
  width: 38px;
  border-radius: 50%;
  background: rgba(105, 234, 203, 0.1);
  border: 1px solid rgba(105, 234, 203, 0.3);
  color: var(--neon-teal);
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.5s ease; /* Slowed down from 0.2s to 0.5s for gentler icon button transitions */
  font-size: 16px;
}

.entrybar .icon-btn:hover {
  background: rgba(105, 234, 203, 0.2);
  transform: scale(1.05);
}

/* Subtle analysis panel */
.analysis-panel {
  position: fixed;
  top: 24px;
  right: 24px;
  padding: 12px 16px;
  border-radius: 12px;
  background: rgba(11, 15, 20, 0.6);
  border: 1px solid rgba(105, 234, 203, 0.1);
  backdrop-filter: blur(15px);
  z-index: 2;
  max-width: 280px;
  font-size: 12px;
  opacity: 0.8;
  transition: opacity 0.2s ease;
}

.analysis-panel:hover {
  opacity: 1;
  justify-content: flex-end;
  padding: 24px;
  z-index: 2;
}

.chat-panel {
  align-self: flex-end;
  max-width: 560px;
  width: 100%;
  margin-bottom: 16px;
  animation: panel-emerge 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.chat {
  max-height: 45vh;
  overflow: auto;
  display: flex;
  flex-direction: column;
  gap: 14px;
  padding: 8px;
}

/* Ethereal chat bubbles that don't dominate the particle stage */
.message { 
  max-width: 80%;
  padding: 10px 12px; 
  border-radius: 14px; 
  background: rgba(16, 24, 33, 0.3); /* More transparent */
  border: 1px solid rgba(105, 234, 203, 0.12);
  box-shadow: 0 0 12px rgba(105, 234, 203, 0.08);
  backdrop-filter: blur(12px);
  opacity: 0.9; /* Slightly transparent by default */
  transition: opacity 0.3s ease, transform 0.3s ease;
}
.message .chip {
  display: inline-block;
  font-size: 12px;
  color: #69EACB;
  border: 1px solid rgba(105, 234, 203, 0.35);
  padding: 2px 8px;
  border-radius: 999px;
  margin-bottom: 6px;
  background: rgba(16, 24, 33, 0.6);
}
.message .bubble {
  font-size: 15px;
  line-height: 1.4;
  color: var(--fg);
}
.message.user { 
  align-self: flex-end; 
  border-color: rgba(105, 234, 203, 0.25);
  box-shadow: 0 0 15px rgba(105, 234, 203, 0.15);
}
.message.ai { 
  align-self: flex-start; 
  border-color: rgba(255, 107, 255, 0.25);
  box-shadow: 0 0 15px rgba(255, 107, 255, 0.15);
}

.message:hover {
  opacity: 1;
  transform: translateY(-1px);
  box-shadow: 0 0 20px rgba(105, 234, 203, 0.2);
}

/* Frosted bottom entry bar */
.entrybar {
  position: fixed;
  left: 50%;
  bottom: 28px;
  transform: translateX(-50%);
  width: min(860px, 92vw);
  display: grid;
  grid-template-columns: 44px 1fr 44px;
  gap: 12px;
  padding: 14px 16px;
  background: rgba(16, 24, 33, 0.6);
  border: 1px solid rgba(105, 234, 203, 0.25);
  border-radius: 18px;
  backdrop-filter: blur(10px);
  box-shadow: 0 0 28px rgba(105, 234, 203, 0.15);
  z-index: 3;
}
.entrybar input {
  width: 100%;
  background: rgba(10, 14, 20, 0.5);
  border: 1px solid rgba(105, 234, 203, 0.25);
  border-radius: 12px;
  padding: 12px 14px;
  color: var(--fg);
  outline: none;
}
.entrybar .icon-btn {
  height: 44px;
  width: 44px;
  border-radius: 12px;
  background: linear-gradient(135deg, rgba(105, 234, 203, 0.16), rgba(255, 107, 255, 0.12));
  border: 1px solid rgba(105, 234, 203, 0.35);
  color: var(--fg);
}
.entrybar .icon-btn:hover {
  box-shadow: 0 0 16px rgba(105, 234, 203, 0.25);
}

/* Analysis card floating under chat */
.analysis-panel {
  position: fixed;
  right: 24px;
  bottom: 108px;
  padding: 12px 14px;
  border-radius: 14px;
  background: rgba(16, 24, 33, 0.65);
  border: 1px solid rgba(105, 234, 203, 0.2);
  backdrop-filter: blur(10px);
  z-index: 2;
  max-width: 420px;
}
.analysis-panel h3 { margin: 0 0 8px 0; font-size: 14px; color: var(--muted); }

/* Chat container layout */
.hud .chat { 
  background: transparent;
  padding: 8px;
}
.hud .chat-panel .chat { 
  display: flex; 
  flex-direction: column; 
}

/* Modern smooth animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes messageSlideIn {
  0% {
    opacity: 0;
    transform: translateY(20px) scale(0.9);
    filter: blur(4px);
  }
  60% {
    opacity: 0.8;
    transform: translateY(-2px) scale(1.02);
    filter: blur(1px);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
    filter: blur(0);
@keyframes panel-emerge {
  0% {
    opacity: 0;
    transform: translateY(60px) scale(0.9);
    filter: blur(6px);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
    filter: blur(0);
  }
}

/* Frosted glass messages - crystallized thoughts */
.msg {
  max-width: 78%;
  padding: 16px 18px;
  border-radius: 16px;
  line-height: 1.5;
  backdrop-filter: blur(12px);
  position: relative;
  animation: msg-condense 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

/* User messages - electric teal glow */
.msg.you {
  margin-left: auto;
  background: var(--glass-bg);
  border: 1px solid var(--neon-teal);
  box-shadow: 
    0 0 32px var(--glow-teal),
    inset 0 1px 0 rgba(105, 234, 203, 0.2);
}

/* Assistant messages - soft cyan with frosted glass */
.msg.clever {
  margin-right: auto;
  background: rgba(18, 24, 33, 0.4);
  border: 1px solid rgba(105, 234, 203, 0.12);
  box-shadow: 
    0 0 24px rgba(105, 234, 203, 0.08),
    inset 0 1px 0 rgba(105, 234, 203, 0.08);
}

/* System messages */
.msg.system {
  margin: 0 auto;
  background: rgba(52, 45, 19, 0.3);
  border: 1px solid rgba(255, 179, 102, 0.2);
  color: var(--muted);
  font-size: 14px;
  text-align: center;
}

/* Thinking message - special magical style */
.msg.thinking {
  background: rgba(255, 107, 255, 0.1);
  border: 1px solid rgba(255, 107, 255, 0.3);
  animation: thinking-pulse 2s ease-in-out infinite;
}

@keyframes thinking-pulse {
  0% { 
    opacity: 0.7;
    border-color: rgba(255, 107, 255, 0.3);
  }
  50% { 
    opacity: 1;
    border-color: rgba(255, 107, 255, 0.6);
    box-shadow: 0 0 20px rgba(255, 107, 255, 0.2);
  }
  100% { 
    opacity: 0.7;
    border-color: rgba(255, 107, 255, 0.3);
  }
}

.thinking-content {
  display: flex;
  align-items: center;
  gap: 12px;
  font-style: italic;
  color: rgba(255, 107, 255, 0.9);
}

.thinking-dots {
  display: flex;
  gap: 4px;
}

.thinking-dots span {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: rgba(255, 107, 255, 0.7);
  animation: thinking-dot 1.4s ease-in-out infinite;
}

.thinking-dots span:nth-child(1) { animation-delay: 0s; }
.thinking-dots span:nth-child(2) { animation-delay: 0.2s; }
.thinking-dots span:nth-child(3) { animation-delay: 0.4s; }

@keyframes thinking-dot {
  0%, 80%, 100% {
    opacity: 0.3;
    transform: scale(0.8);
  }
  40% {
    opacity: 1;
    transform: scale(1.2);
  }
}

/* Magical manifestation animation */
@keyframes msg-condense {
  0% {
    opacity: 0;
    transform: scale(0.8) translateY(20px);
    filter: blur(8px);
    background: rgba(105, 234, 203, 0.02);
  }
  40% {
    opacity: 0.6;
    transform: scale(0.95) translateY(8px);
    filter: blur(4px);
  }
  100% {
    opacity: 1;
    transform: scale(1) translateY(0);
    filter: blur(0);
  }
}

/* Entry bar - condensed from particle field */
.entrybar {
  display: flex;
  justify-content: center;
  animation: entry-materialize 1.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.entry {
  display: flex;
  align-items: center;
  width: min(720px, 92vw);
  gap: 12px;
  padding: 14px 18px;
  background: rgba(11, 15, 20, 0.7);
  border: 1px solid var(--neon-teal);
  border-radius: 18px;
  backdrop-filter: blur(16px);
  box-shadow: 
    0 0 40px var(--glow-teal),
    inset 0 1px 0 rgba(105, 234, 203, 0.15);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.entry:focus-within {
  border-color: var(--neon-magenta);
  box-shadow: 
    0 0 48px var(--glow-magenta),
    inset 0 1px 0 rgba(255, 107, 255, 0.2);
}

@keyframes entry-materialize {
  0% {
    opacity: 0;
    transform: translateY(40px) scale(0.85);
    filter: blur(8px);
    background: rgba(105, 234, 203, 0.05);
  }
  60% {
    opacity: 0.8;
    transform: translateY(-5px) scale(1.02);
    filter: blur(2px);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
    filter: blur(0);
  }
}

.entry input {
  flex: 1;
  background: transparent;
  border: none;
  outline: none;
  color: var(--fg);
  font-size: 16px;
  transition: color 0.3s ease;
}

.entry input::placeholder {
  color: rgba(149, 163, 179, 0.7);
  transition: color 0.3s ease;
}

.entry:focus-within input::placeholder {
  color: rgba(255, 107, 255, 0.6);
}

.entry select {
  background: rgba(11, 15, 20, 0.8);
  color: var(--fg);
  border: 1px solid rgba(105, 234, 203, 0.3);
  border-radius: 12px;
  padding: 8px 12px;
  font-size: 13px;
  backdrop-filter: blur(8px);
}

.entry .icon {
  background: rgba(11, 15, 20, 0.6);
  border: 1px solid rgba(105, 234, 203, 0.4);
  color: var(--fg);
  border-radius: 12px;
  padding: 10px 12px;
  cursor: pointer;
  backdrop-filter: blur(8px);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.entry .icon:hover {
  border-color: var(--neon-teal);
  box-shadow: 0 0 20px var(--glow-teal);
  background: rgba(11, 15, 20, 0.8);
}

.entry .icon:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* Microphone - magical voice activation */
.mic-btn {
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.mic-btn.listening {
  background: rgba(255, 107, 255, 0.2) !important;
  border-color: var(--neon-magenta) !important;
  box-shadow: 0 0 32px var(--glow-magenta) !important;
  animation: pulse-magical 2s infinite;
}

@keyframes pulse-magical {
  0% { 
    transform: scale(1); 
    box-shadow: 0 0 24px var(--glow-magenta);
  }
  50% { 
    transform: scale(1.08); 
    box-shadow: 0 0 40px rgba(255, 107, 255, 0.8);
  }
  100% { 
    transform: scale(1);
    box-shadow: 0 0 24px var(--glow-magenta);
  }
}

/* Magical scrollbars - cosmic energy flows */
.chat::-webkit-scrollbar {
  width: 12px;
}

.chat::-webkit-scrollbar-track {
  background: rgba(11, 15, 20, 0.3);
  border-radius: 6px;
}

.chat::-webkit-scrollbar-thumb {
  background: linear-gradient(180deg, 
    rgba(105, 234, 203, 0.15) 0%, 
    rgba(105, 234, 203, 0.25) 50%,
    rgba(255, 107, 255, 0.15) 100%);
  border-radius: 6px;
  border: 1px solid rgba(105, 234, 203, 0.1);
  transition: all 0.3s ease;
}

.chat::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(180deg, 
    rgba(105, 234, 203, 0.3) 0%, 
    rgba(105, 234, 203, 0.4) 50%,
    rgba(255, 107, 255, 0.25) 100%);
  box-shadow: 0 0 8px rgba(105, 234, 203, 0.2);
}

/* Clean mode — minimal magical focus */
body.clean .entry select { display: none; }
body.clean #files-btn,
body.clean #ingest-btn { display: none; }
body.clean .entry {
  box-shadow: 0 0 20px rgba(105, 234, 203, 0.1); 
  border-color: rgba(105, 234, 203, 0.15);
}
body.clean .msg.you {
  box-shadow: 0 0 16px rgba(105, 234, 203, 0.08);
}
body.clean .msg {
  border-color: rgba(105, 234, 203, 0.08);
}
body.clean .grid-full::before {
  opacity: 0.3;
  background-image: 
    linear-gradient(rgba(105, 234, 203, 0.02) 1px, transparent 1px),
    linear-gradient(90deg, rgba(105, 234, 203, 0.02) 1px, transparent 1px);
}

