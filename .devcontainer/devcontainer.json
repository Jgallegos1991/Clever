{
  "name": "Clever AI - Offline Assistant (Jay)",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "containerEnv": { 
    "PORT": "5000",
    "FLASK_ENV": "development"
  },
  "forwardPorts": [5000],
  "portsAttributes": {
    "5000": { 
      "label": "Clever AI (Flask)", 
      "onAutoForward": "openBrowser" 
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.flake8",
        "ms-toolsai.jupyter",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ],
      "settings": {
        "extensions.ignoreRecommendations": false,
        "workbench.startupEditor": "none",
        "telemetry.telemetryLevel": "off",
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "files.exclude": {
          "**/__pycache__": true,
          "**/*.pyc": true
        }
      }
    }
  },
  "postCreateCommand": "bash -lc 'python -m venv .venv && source .venv/bin/activate && pip install -U pip wheel && if [ -f requirements.txt ]; then pip install -r requirements.txt; fi && echo \"✅ Clever AI environment ready!\"'",
  "postStartCommand": "bash -lc 'make setup-full || echo \"⚠️  Run make setup-full manually if needed\"'"
}
