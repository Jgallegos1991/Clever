{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "checkJs": true,
        "allowJs": true,
        "baseUrl": "./",
        "paths": {
            "*": ["static/js/*", "static/js/engines/*", "static/js/core/*", "static/js/performance/*"]
        }
    },
    "include": [
        "static/**/*.js",
        "templates/**/*.html",
        "*.html"
    ],
    "exclude": [
        "node_modules",
        ".venv",
        "static/js/tailwindcss.js"
    ]
}
